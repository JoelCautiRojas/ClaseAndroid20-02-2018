                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="20dp"
